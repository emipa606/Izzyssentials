<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--======================= Basic domestic furniture ==============================-->
  <ThingDef ParentName="FurnitureWithQualityBase">
    <!-- HRC_Stool -->
    <defName>HRC_Stool</defName>
    <label>modular stool</label>
    <description>A simple platform on which to sit.</description>
    <uiIconPath>Things/Izzy_Furniture/HRC_Stool_Icon</uiIconPath>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Izzy_Furniture/HRC_Stool_Atlas</texPath>
      <drawSize>(1,1)</drawSize>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Custom4</li>
      </linkFlags>
    </graphicData>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <fillPercent>0.30</fillPercent>
    <pathCost>30</pathCost>
    <building>
      <isSittable>true</isSittable>
    </building>
    <socialPropernessMatters>true</socialPropernessMatters>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToMake>750</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>3</Beauty>
      <Comfort>0.5</Comfort>
      <Mass>3</Mass>
    </statBases>
  </ThingDef>
